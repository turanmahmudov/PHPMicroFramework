{
    "name": "turanmahmudov/php-micro-framework",
    "type": "library",
    "description": "a micro php framework",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Turan Mahmudov",
            "email": "turan.mahmudov@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "psr/log": "^1.1",
        "psr/container": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-factory": "^1.0",
        "php-di/php-di": "^7.0",
        "nikic/fast-route": "^1.3",
        "rybakit/arguments-resolver": "^0.6",
        "php-http/discovery": "^1.15"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.5",
        "php-coveralls/php-coveralls": "^2.4",
        "phploc/phploc": "^7.0",
        "phpstan/extension-installer": "^1.1",
        "phpspec/prophecy-phpunit": "^2.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Framework\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fix:cs": "mkdir -p build && vendor/bin/phpcbf --cache=build/phpcs.cache",
        "test": [
            "@test:lint",
            "@test:unit",
            "@test:stan",
            "@test:loc",
            "@test:cs"
        ],
        "test:cs": "mkdir -p build && vendor/bin/phpcs --cache=build/phpcs.cache",
        "test:lint": "mkdir -p build && find src tests -name '*.php' -print0 | xargs -0 -n1 -P$(nproc) php -l | tee build/phplint.log",
        "test:loc": "mkdir -p build && vendor/bin/phploc src | tee build/phploc.log",
        "test:stan": "mkdir -p build && bash -c 'vendor/bin/phpstan analyse --no-progress; if [ ${PIPESTATUS[0]} -ne \"0\" ]; then exit 1; fi'",
        "test:unit": "vendor/bin/phpunit --testsuite=Unit --coverage-clover=build/phpunit/clover.xml --coverage-html=build/phpunit/coverage-html --coverage-xml=build/phpunit/coverage-xml --cache-result-file=build/phpunit/result.cache"
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "php-http/discovery": true
        }
    }
}
